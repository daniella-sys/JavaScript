//one function
function countwords(text){
    var words = text.trim().split(/\s+/);
    return words.lenght;
}

// two function
function сountsymbols(text){
    return countwords;
}

// tree function 
function calculatingtheaveragewordlength(text){
    var average = text.trim().split(/\s+/);
    var lenght = average.reduce(sum + words.lenght, 0);
    return lenght.words.lenght;
}

// four function
function numberofsentences(text){
    var number = text.trim().split(/\s+/, "numberofsentences:" + words.lenght);
    return number;
}

console.log("Кількість слів:", countwords);
console.log("Кількість середньої довжини слова:", calculatingtheaveragewordlength);
console.log("Кількість речень:", numberofsentences);

