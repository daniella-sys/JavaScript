// check out question and...
const question = [
    "question_historyone", "question_historytwo", "question_historythree", 
    "question_historyfour", "question_historyfive", "question_historysix", 
    "question_historyseven", "question_historyeight", "question_historynine", 
    "question_historyten", "question_historyeleven", "question_historytwoteen"
  ];
  
  const correct_answers = [
    "optionsone", "optionstwo", "optionsthree", "optionsfour", "optionsfive", 
    "optionssix", "optionsseven", "optionseight", "optionsnine", "optionsten", 
    "optionseleven", "optionstwoteen"
  ];
  
  const user_answers = [];
  
  for (let i = 0; i < question.length; i++) {
    let answer = prompt(question[i]);  // Виклик спливаючого вікна для кожного питання
    user_answers.push(answer);  // Додавання відповіді користувача до масиву
  }
  
  for (let i = 0; i < question.length; i++) {
    if (user_answers[i] === correct_answers[i]) {
      console.log(`На ${question[i]} відповідь правильна!`);
    } else {
      console.log(`На ${question[i]} відповідь неправильна.`);
    }
  }
  
