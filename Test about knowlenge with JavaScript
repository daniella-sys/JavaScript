//check out question one
function checkAnswer(questionone, variante_answer){
    if (questionone.correctAnswer === variante_answer - 1) {
        console.log("Правильно!");
    } else {
        console.log("Неправильно. Правильна відповідь: " + questionone.options[questionone.correct_Answer]);

    }
};

//check out question two
function checkAnswer(questiontwo, variantetwo_answer){
    if (questiontwo.correcttwo_answer === variantetwo_answer - 1) {
        console.log("True");
    } else {
        console.log("Not true. True answer: " + questiontwo.options[questiontwo.correcttwo_answer]);
    }
};

//check out question tree
function checkAnswer(questiontree, variantetree_answer){
